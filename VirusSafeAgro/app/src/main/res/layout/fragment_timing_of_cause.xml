<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nsv_container_timing"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TimingOfCauseFragment">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/ml_container_timing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="35dp"
        android:transitionName="@string/timing_transition_name"
        tools:showPaths="true"
        app:layoutDescription="@xml/ms_timing_fragment">

        <!-- note -->
        <RelativeLayout
            android:id="@+id/rl_note_timing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:background="@drawable/shape_title_timing"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_note_title_timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="NOTE : " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_note_title_timing"
                android:text="@string/text_note_timing"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"/>
        </RelativeLayout>

        <!-- card1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_eb_timing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rl_note_timing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/colorPrimaryTile"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/timing_eb"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:text="EB"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite" />

                    <ImageButton
                        android:id="@+id/imgbtn_card1_timing"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/transparent"
                        android:tint="@color/colorWhite"
                        android:src="@drawable/arrow_down"/>

                </RelativeLayout>

                <View
                    android:id="@+id/v_horizontal_line1_timing"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.3"
                    android:background="@color/colorWhite"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>

                <RelativeLayout
                    android:id="@+id/rl_card1_hide_timing"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="30dp"
                    android:paddingStart="35dp"
                    android:paddingEnd="35dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/text_eb_timing"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- card2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_tssm_timing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cv_eb_timing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/colorPrimaryTile"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/timing_tssm"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:text="TSSM"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite" />

                    <ImageButton
                        android:id="@+id/imgbtn_card2_timing"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/transparent"
                        android:tint="@color/colorWhite"
                        android:src="@drawable/arrow_down"/>

                </RelativeLayout>

                <View
                    android:id="@+id/v_horizontal_line2_timing"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.3"
                    android:background="@color/colorWhite"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>

                <RelativeLayout
                    android:id="@+id/rl_card2_hide_timing"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="30dp"
                    android:paddingStart="35dp"
                    android:paddingEnd="35dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/text_tssm_timing"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.motion.widget.MotionLayout>

</androidx.core.widget.NestedScrollView>