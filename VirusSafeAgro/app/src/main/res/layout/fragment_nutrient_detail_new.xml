<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDarkBG"
    tools:context=".fragments.NutrientDetailNewFragment">

    <!-- title -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl_nutrient_title_nutrient_detail"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout_nutrient_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorDarkForeground"
            app:collapsedTitleGravity="start"
            app:titleEnabled="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:id="@+id/img_nutrient_detail_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_image"
                android:scaleType="centerCrop"
                android:transitionName="@string/quiz_activity_transition_name"
                app:layout_collapseParallaxMultiplier="0.9"
                app:layout_collapseMode="parallax"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_nutrient_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:expandedTitleMarginEnd="10dp"
                app:expandedTitleMarginStart="10dp"
                app:expandedTitleTextAppearance="@style/expendText"
                app:collapsedTitleTextAppearance="@style/collapse"
                app:title="Title" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView_nutrient_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="50dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- nutrient symptom-->
            <TextView
                android:id="@+id/tv_symptom_title_nutrient_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorPrimaryDescriptionContent"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="Symptoms" />
            <LinearLayout
                android:id="@+id/ll_symptom_nutrient_detail"
                android:layout_below="@id/tv_symptom_title_nutrient_detail"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_container_tile_bg_virus_detail"
                android:orientation="vertical">
                <!-- leaves -->
                <LinearLayout
                    android:id="@+id/ll_symptom_leaves_nutrient_detail"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="10dp">
                        <ImageView
                            android:id="@+id/img_symptom_leaves_nutrient_detail"
                            android:scaleType="centerCrop"
                            android:background="@drawable/leaf"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll_symptom_leaves_items_nutrient_detail"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
                <!-- petioles -->
                <LinearLayout
                    android:id="@+id/ll_symptom_petioles_nutrient_detail"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="10dp">
                        <ImageView
                            android:id="@+id/img_symptom_petioles_nutrient_detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/petioles"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll_symptom_petioles_items_nutrient_detail"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
                <!-- fruit -->
                <LinearLayout
                    android:id="@+id/ll_symptom_fruit_nutrient_detail"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="10dp">
                        <ImageView
                            android:id="@+id/img_symptom_fruit_nutrient_detail"
                            android:scaleType="centerCrop"
                            android:background="@drawable/tomato_show"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll_symptom_fruit_items_nutrient_detail"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
                <!-- stems and petioles -->
                <LinearLayout
                    android:id="@+id/ll_symptom_stems_petioles_nutrient_detail"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="10dp">
                        <ImageView
                            android:id="@+id/img_symptom_stems_petioles_nutrient_detail"
                            android:scaleType="centerCrop"
                            android:background="@drawable/stems_petioles"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll_symptom_stems_petioles_items_nutrient_detail"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
                <!-- plant -->
                <LinearLayout
                    android:id="@+id/ll_symptom_plant_nutrient_detail"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="10dp">
                        <ImageView
                            android:id="@+id/img_symptom_plant_nutrient_detail"
                            android:scaleType="centerCrop"
                            android:background="@drawable/plant"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll_symptom_plant_items_nutrient_detail"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
                <!-- roots -->
                <LinearLayout
                    android:id="@+id/ll_symptom_roots_nutrient_detail"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="10dp">
                        <ImageView
                            android:id="@+id/img_symptom_roots_nutrient_detail"
                            android:scaleType="centerCrop"
                            android:background="@drawable/root"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll_symptom_roots_items_nutrient_detail"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
            </LinearLayout>

            <!-- nutrient reasons-->
            <TextView
                android:id="@+id/tv_reasons_title_nutrient_detail"
                android:layout_below="@id/ll_symptom_nutrient_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorPrimaryDescriptionContent"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="Reasons" />
            <LinearLayout
                android:id="@+id/ll_reasons_nutrient_detail"
                android:layout_below="@id/tv_reasons_title_nutrient_detail"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_container_tile_bg_virus_detail"
                android:orientation="vertical">

            </LinearLayout>

            <!-- nutrient factors-->
            <TextView
                android:id="@+id/tv_factors_title_nutrient_detail"
                android:layout_below="@id/ll_reasons_nutrient_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorPrimaryDescriptionContent"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="Factors" />
            <LinearLayout
                android:id="@+id/ll_factors_nutrient_detail"
                android:layout_below="@id/tv_factors_title_nutrient_detail"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_container_tile_bg_virus_detail"
                android:orientation="vertical">

            </LinearLayout>

            <!-- nutrient treatment-->
            <TextView
                android:id="@+id/tv_treatment_title_nutrient_detail"
                android:layout_below="@id/ll_factors_nutrient_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorPrimaryDescriptionContent"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="Treatments" />
            <LinearLayout
                android:id="@+id/ll_treatment_nutrient_detail"
                android:layout_below="@id/tv_treatment_title_nutrient_detail"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_container_tile_bg_virus_detail"
                android:orientation="vertical">
            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>