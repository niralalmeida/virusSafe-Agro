<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetectActivity">

    <View
        android:id="@+id/touch_outside"
        app:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/fl_bottom_sheet"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="120dp"
        android:elevation="5dp"
        app:behavior_hideable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/rl_detect_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:showPaths="true"
            app:layoutDescription="@xml/ms_detect_activity">

            <!-- close button -->
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_close_button_detect_activity"
                android:layout_alignEnd="@id/nsv_all_view_detect_activity"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="25dp"
                android:layout_height="25dp">

                <ImageView
                    android:id="@+id/btn_close_detect_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="false"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:tint="@color/colorBlack"
                    android:src="@drawable/ic_close_white_30dp"/>

            </RelativeLayout>

            <!-- title -->
            <TextView
                android:id="@+id/tv_choose_image_title_detect_activity"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:text="Select tomato leaf to detect virus" />

            <!-- 2 buttons -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_2_buttons_detect"
                android:transitionName="@string/fab_transition_name"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_image_title_detect_activity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal" >
                <!-- camera -->
                <LinearLayout
                    android:id="@+id/ll_camera"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/v_vertical_line_detect"
                    android:elevation="10dp"
                    android:background="@drawable/ripple_btn_camera_detect"
                    android:padding="15dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/btn_camera"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:tint="@color/colorBlack"
                        android:src="@drawable/ic_add_a_photo_white"/>
                    <TextView
                        android:id="@+id/tv_camera"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorBlack"
                        android:text="Take A Photo"/>
                </LinearLayout>
                <!-- line -->
                <View
                    android:id="@+id/v_vertical_line_detect"
                    android:layout_width="3dp"
                    android:layout_height="0dp"
                    android:elevation="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ll_camera"
                    app:layout_constraintEnd_toStartOf="@id/ll_gallery"
                    android:background="@android:color/transparent"/>
                <!-- gallery -->
                <LinearLayout
                    android:id="@+id/ll_gallery"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:elevation="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/v_vertical_line_detect"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/ripple_btn_gallery_detect"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btn_gallery"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:tint="@color/colorBlack"
                        android:src="@drawable/ic_photo_library_white" />

                    <TextView
                        android:id="@+id/tv_gallery"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorBlack"
                        android:text="Pick From Gallery"/>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- image format tip -->
            <TextView
                android:id="@+id/tv_image_format_tip_detect_activity"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/ll_2_buttons_detect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorBlack"
                android:text="Accepted image format: .jpeg, .jpg" />

            <!-- image -->
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_upload_check"
                android:src="@drawable/default_leaf"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintTop_toTopOf="@id/ll_2_buttons_detect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- upload button -->
            <Button
                android:id="@+id/btn_upload_image"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_upload_check"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/ripple_btn_update_image_virus_check"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Analyse Virus"/>

            <!-- main content -->
            <androidx.core.widget.NestedScrollView
                android:visibility="gone"
                android:id="@+id/nsv_all_view_detect_activity"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.core.widget.NestedScrollView>

            <!-- progress bar -->
            <RelativeLayout
                android:id="@+id/rl_process_bar_detect_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/pb_uploading_detect_activity"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/pb_uploading_detect_activity"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/process_bar_text_virus_check" />

            </RelativeLayout>

        </androidx.constraintlayout.motion.widget.MotionLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>