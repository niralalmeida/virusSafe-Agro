<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetectActivity">

    <RelativeLayout
        android:id="@+id/touch_outside"
        app:elevation="1dp"
        app:layout_anchorGravity="top"
        app:layout_anchor="@id/fl_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/fl_bottom_sheet"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="200dp"
        android:elevation="5dp"
        app:behavior_hideable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/ml_detect_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bg_detect_activity"
            tools:showPaths="true"
            app:layoutDescription="@xml/ms_detect_activity">

            <!-- swipe tip -->
            <View
                android:id="@+id/v_swipe_tip_detect_activity"
                android:layout_width="55dp"
                android:layout_height="5dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/shape_swipe_tip_view_detect_activity" />

            <!-- close button -->
            <ImageButton
                android:visibility="invisible"
                android:id="@+id/btn_close_detect_activity"
                android:layout_alignEnd="@id/nsv_all_view_detect_activity"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"
                android:elevation="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_wrong_circle_black_50dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <!-- title -->
            <TextView
                android:id="@+id/tv_choose_image_title_detect_activity"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"
                app:layout_constraintTop_toBottomOf="@id/v_swipe_tip_detect_activity"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:text="Select a Tomato Leaf" />

            <!-- 2 buttons -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_2_buttons_detect"
                android:transitionName="@string/fab_transition_name"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_image_title_detect_activity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="@color/colorPrimaryLightBG"
                app:cardElevation="6dp"
                app:cardCornerRadius="200dp">
                <LinearLayout
                    android:id="@+id/ll_2_buttons_detect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <!-- camera -->
                    <LinearLayout
                        android:id="@+id/ll_camera"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_btn_camera_detect"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img_camera_detect_activity"
                            android:visibility="invisible"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.65"
                            android:tint="@color/colorBlack"
                            android:src="@drawable/ic_add_a_photo_white"/>
                        <TextView
                            android:id="@+id/tv_camera_detect_activity"
                            android:visibility="invisible"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.35"
                            android:gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:text="Take A Photo"/>
                    </LinearLayout>
                    <!-- gallery -->
                    <LinearLayout
                        android:id="@+id/ll_gallery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_btn_gallery_detect"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img_gallery_detect_activity"
                            android:visibility="invisible"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.65"
                            android:tint="@color/colorBlack"
                            android:src="@drawable/ic_photo_library_white" />
                        <TextView
                            android:id="@+id/tv_gallery_detect_activity"
                            android:visibility="invisible"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.35"
                            android:gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:text="Pick From Gallery"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- image format tip -->
<!--            <TextView-->
<!--                android:id="@+id/tv_image_format_tip_detect_activity"-->
<!--                android:visibility="gone"-->
<!--                android:layout_marginTop="10dp"-->
<!--                app:layout_constraintTop_toBottomOf="@id/ll_2_buttons_detect"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:textColor="@color/colorBlack"-->
<!--                android:text="Accepted image format: .jpeg, .jpg" />-->

            <!-- image -->
            <ImageView
                android:visibility="invisible"
                android:id="@+id/img_upload_detect_activity"
                android:src="@drawable/default_leaf"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/cv_2_buttons_detect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- upload button -->
            <Button
                android:id="@+id/btn_upload_image_detect_activity"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/img_upload_check"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/ripple_btn_update_image_virus_check"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Analyse Virus"/>

            <!-- main content -->
            <androidx.core.widget.NestedScrollView
                android:visibility="gone"
                android:id="@+id/nsv_all_view_detect_activity"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.core.widget.NestedScrollView>

            <!-- progress bar -->
            <RelativeLayout
                android:id="@+id/rl_process_bar_detect_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/pb_uploading_detect_activity"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/pb_uploading_detect_activity"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/process_bar_text_virus_check" />

            </RelativeLayout>

        </androidx.constraintlayout.motion.widget.MotionLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>