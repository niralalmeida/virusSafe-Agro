<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_detect_instruction_bg"
    tools:context=".fragments.DetectTomatoInstructionsFragment">

    <!-- swipe tip -->
    <View
        android:id="@+id/v_swipe_tip_detect_instruction"
        android:layout_width="55dp"
        android:layout_height="5dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_swipe_tip_view_detect_activity" />

    <!-- icon -->
    <ImageView
        android:id="@+id/img_tip_icon_instructions"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/v_swipe_tip_detect_instruction"
        app:layout_constraintStart_toStartOf="parent"
        android:tint="@color/iconInsight"
        android:src="@drawable/bulb" />

    <!-- title -->
    <TextView
        android:id="@+id/tv_title_detect_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/v_swipe_tip_detect_instruction"
        app:layout_constraintStart_toEndOf="@id/img_tip_icon_instructions"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/text_title_instruction"/>

    <!-- horizontal line -->
    <View
        android:id="@+id/v_horizontal_line_detect_instruction"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/img_tip_icon_instructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0.3"/>

    <!-- scrollable contents -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/v_horizontal_line_detect_instruction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- tip1  -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/card_bg_detect_instruction">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">
                    <TextView
                        android:id="@+id/tv_tip1_detect_instruction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_tip1_instruction"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="13sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/tv_tip1_detect_instruction"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_tip1_no_detect_instruction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/one_no"/>
                        <ImageView
                            android:id="@+id/img_tip1_yes_detect_instruction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/one_yes"/>
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_tip1_detect_instruction"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_tip1_no_detect_instruction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:gravity="center"
                            android:text="No"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/wrongAnswer"
                            android:background="@drawable/shape_tip_yes_no_bg"/>
                        <TextView
                            android:id="@+id/tv_tip1_yes_detect_instruction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:gravity="center"
                            android:text="Yes"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/rightAnswer"
                            android:background="@drawable/shape_tip_yes_no_bg"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_change"
                            android:tint="@color/iconInsight"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- tip2  -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/card_bg_detect_instruction">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">
                    <TextView
                        android:id="@+id/tv_tip2_detect_instruction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_tip2_instruction"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="13sp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/tv_tip2_detect_instruction">
                        <ImageView
                            android:id="@+id/img_tip2_no_detect_instruction"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="w, 1:1"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/img_tip2_yes_detect_instruction"
                            android:scaleType="centerCrop"
                            android:src="@drawable/two_no"/>
                        <ImageView
                            android:id="@+id/img_tip2_yes_detect_instruction"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="w, 1:1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/img_tip2_no_detect_instruction"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/two_yes"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_tip2_detect_instruction"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_tip2_no_detect_instruction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:gravity="center"
                            android:text="No"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/wrongAnswer"
                            android:background="@drawable/shape_tip_yes_no_bg"/>
                        <TextView
                            android:id="@+id/tv_tip2_yes_detect_instruction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:gravity="center"
                            android:text="Yes"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/rightAnswer"
                            android:background="@drawable/shape_tip_yes_no_bg"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_change"
                            android:tint="@color/iconInsight"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>