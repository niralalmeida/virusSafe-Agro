    <!-- image -->
    <com.example.virussafeagro.uitilities.DragYRelativeLayout
        android:visibility="gone"
        android:id="@+id/drl_image_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/home_image_bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/home_image_logo"/>

        <TextView
            android:id="@+id/tv_swipe_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/img_swipe_home"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="Swipe Up"/>

        <ImageView
            android:id="@+id/img_swipe_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:src="@drawable/swipe_up"/>

    </com.example.virussafeagro.uitilities.DragYRelativeLayout>

</RelativeLayout>

