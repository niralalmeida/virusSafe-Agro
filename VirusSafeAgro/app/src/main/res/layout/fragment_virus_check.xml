<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_virus_check"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="@string/fab_transition_name"
    android:background="@drawable/shape_virus_check_fragment_bg">

    <!-- title -->
    <LinearLayout
        android:id="@+id/ll_choose_image_title_virus_check"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_choose_image_title_virus_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="Select tomato leaf to detect virus" />

    </LinearLayout>

    <!-- main content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_all_view_virus_check"
        android:layout_below="@id/ll_choose_image_title_virus_check"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_all_virus_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 2 buttons + image -->
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_virus_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 2 buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/ll_camera_check"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="15dp"
                            android:orientation="vertical"
                            android:background="@color/colorPrimaryTile">

                            <ImageView
                                android:id="@+id/btn_camera"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.7"
                                android:src="@drawable/ic_add_a_photo_white"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3"
                                android:gravity="center_horizontal"
                                android:textColor="@color/colorWhite"
                                android:text="Take A Photo"/>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"/>

                        <LinearLayout
                            android:id="@+id/ll_select_image"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:padding="15dp"
                            android:background="@color/colorPrimaryTile"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/btn_select_image"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.7"
                                android:src="@drawable/ic_photo_library_white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3"
                                android:gravity="center_horizontal"
                                android:textColor="@color/colorWhite"
                                android:text="Pick From Gallery"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- image -->
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/img_upload_check"
                        android:src="@drawable/default_leaf"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- update image button -->
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_upload_image_button_virus_check"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_upload_image_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ripple_btn_update_image_virus_check"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="Analyse Virus"/>

            </RelativeLayout>

            <!-- image format tip -->
            <TextView
                android:id="@+id/tv_image_format_tip_virus_check"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorSubTitle"
                android:text="Accepted image format: .jpeg, .jpg" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- close button -->
    <RelativeLayout
        android:id="@+id/rl_close_button_virus_check"
        android:layout_alignEnd="@id/nsv_all_view_virus_check"
        android:layout_marginTop="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp">

        <ImageView
            android:id="@+id/btn_close_virus_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close_white_30dp"/>

    </RelativeLayout>

    <!-- progress bar -->
    <RelativeLayout
        android:id="@+id/rl_process_bar_virus_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pb_uploading_virus_check"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pb_uploading_virus_check"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="@string/process_bar_text_virus_check" />

    </RelativeLayout>

</RelativeLayout>