<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_each_item_quiz_result_final"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_each_quiz_result_final"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        card_view:cardBackgroundColor="@color/colorPrimaryDark"
        card_view:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:orientation="vertical">

            <!-- question -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_question_mark_quiz_result_final"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_right_circle_white_50dp"/>

                <TextView
                    android:id="@+id/tv_question_no_quiz_result_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:text="Q# - " />

                <TextView
                    android:id="@+id/tv_question_content_quiz_result_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:text="This is the question content. This is the question content" />

            </LinearLayout>

            <!-- question image -->
            <ImageView
                android:id="@+id/img_question_quiz_result_final"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/default_leaf"
                android:visibility="gone"/>

            <View
                android:id="@+id/v_line_quiz_result_final"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:alpha="0.3"
                android:background="@color/colorTransparentWhiteForText"
                android:layout_gravity="center_horizontal" />

            <!-- user answer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="YOUR ANSWER : "
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_user_answer_quiz_result_final"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginLeft="28dp"
                    android:text="#. xxxx\n#. xxxx "
                    android:layout_gravity="top"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>

            </LinearLayout>

            <!-- correct answer -->
            <LinearLayout
                android:id="@+id/ll_correct_answer_quiz_result_final"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="CORRECT ANSWER : "
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_correct_answer_quiz_result_final"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#. xxxx\n#. xxxx "
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="top"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>

            </LinearLayout>

            <!-- answer explanation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXPLANATION : "
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_explanation_quiz_result_final"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="xxxxxxxxxxxx"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="top"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
