<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordActivity">

    <ImageView
        android:id="@+id/img_lock_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/et_app_password"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_lock_outline_black" />

    <EditText
        android:id="@+id/et_app_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Input password to launch"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <Button
        android:id="@+id/btn_launch_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_app_password"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="#000"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="launch app"
        android:textColor="#fff" />

</RelativeLayout>