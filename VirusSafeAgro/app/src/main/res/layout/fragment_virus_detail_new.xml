<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDarkBG"
    tools:context=".fragments.VirusDetailNewFragment">

    <!-- gallery fab -->
    <com.robertlevonyan.views.customfloatingactionbutton.FloatingActionLayout
        android:id="@+id/fabl_gallery_virus_detail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        app:fabType="roundedSquare"
        app:layout_anchorGravity="bottom|end"
        app:layout_anchor="@id/abl_virus_title_virus_detail">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/shape_virus_gallery_fab_virus_detail"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_virus_gallery_fab_virus_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="5dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_virus_gallery_fab_virus_detail"
                android:tint="@color/colorWhite"
                android:src="@drawable/virus_green" />
            <TextView
                android:id="@+id/tv_virus_gallery_fab_virus_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_virus_gallery_fab_virus_detail"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Gallery"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.robertlevonyan.views.customfloatingactionbutton.FloatingActionLayout>

    <!-- title -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl_virus_title_virus_detail"
        android:transitionName="@string/image_gallery_transition_name"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout_virus_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorDarkForeground"
            app:collapsedTitleGravity="start"
            app:titleEnabled="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:id="@+id/img_virus_detail_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_image"
                android:scaleType="centerCrop"
                android:transitionName="@string/quiz_activity_transition_name"
                app:layout_collapseParallaxMultiplier="0.9"
                app:layout_collapseMode="parallax"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_virus_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:expandedTitleMarginEnd="10dp"
                app:expandedTitleMarginStart="10dp"
                app:expandedTitleTextAppearance="@style/expendText"
                app:collapsedTitleTextAppearance="@style/collapse"
                app:title="Title" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView_virus_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="50dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- virus full name -->
            <TextView
                android:id="@+id/tv_full_name_title_virus_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorPrimaryDescriptionContent"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="Virus Full Name" />
            <LinearLayout
                android:id="@+id/ll_full_name_virus_detail"
                android:layout_below="@id/tv_full_name_title_virus_detail"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_full_name_tile_bg_virus_detail"
                android:orientation="horizontal">
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/tv_full_name_virus_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="virus full name"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- virus description-->
            <TextView
                android:id="@+id/tv_description_title_virus_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/ll_full_name_virus_detail"
                android:textColor="@color/colorPrimaryDescriptionContent"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="Description" />
            <LinearLayout
                android:id="@+id/ll_description_virus_detail"
                android:layout_below="@id/tv_description_title_virus_detail"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_container_tile_bg_virus_detail"
                android:orientation="vertical">

            </LinearLayout>

            <!-- virus symptom-->
            <TextView
                android:id="@+id/tv_symptom_title_virus_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/ll_description_virus_detail"
                android:textColor="@color/colorPrimaryDescriptionContent"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="Symptom" />
            <LinearLayout
                android:id="@+id/ll_symptom_virus_detail"
                android:layout_below="@id/tv_symptom_title_virus_detail"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_container_tile_bg_virus_detail"
                android:orientation="vertical">
                <!-- leaves -->
                <LinearLayout
                    android:id="@+id/ll_symptom_leaves_virus_detail"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="10dp">
                        <ImageView
                            android:id="@+id/img_symptom_leaves_virus_detail"
                            android:scaleType="centerCrop"
                            android:background="@color/image_default_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll_symptom_leaves_items_virus_detail"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
                <!-- appearance -->
                <LinearLayout
                    android:id="@+id/ll_symptom_appearance_virus_detail"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="10dp">
                        <ImageView
                            android:id="@+id/img_symptom_appearance_virus_detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tomato_appearance"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll_symptom_appearance_items_virus_detail"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
                <!-- fruit -->
                <LinearLayout
                    android:id="@+id/ll_symptom_fruit_virus_detail"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="10dp">
                        <ImageView
                            android:id="@+id/img_symptom_fruit_virus_detail"
                            android:scaleType="centerCrop"
                            android:background="@color/image_default_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll_symptom_fruit_items_virus_detail"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
            </LinearLayout>

            <!-- virus causes-->
            <TextView
                android:id="@+id/tv_cause_title_virus_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/ll_symptom_virus_detail"
                android:textColor="@color/colorPrimaryDescriptionContent"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="Cause" />
            <LinearLayout
                android:id="@+id/ll_cause_virus_detail"
                android:layout_below="@id/tv_cause_title_virus_detail"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_container_tile_bg_virus_detail"
                android:orientation="vertical">
                <!-- Timing of cause -->
                <LinearLayout
                    android:id="@+id/ll_cause_timing_virus_detail"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        android:layout_gravity="center"
                        app:cardElevation="10dp">
                        <ImageView
                            android:id="@+id/img_cause_timing_virus_detail"
                            android:scaleType="centerInside"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/timing"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll_cause_timing_items_virus_detail"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
                <!-- Environmental condition -->
                <LinearLayout
                    android:id="@+id/ll_cause_ec_virus_detail"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="10dp">
                        <ImageView
                            android:id="@+id/img_cause_ec_virus_detail"
                            android:scaleType="centerInside"
                            android:src="@drawable/environmental_condition"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll_cause_ec_items_virus_detail"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
                <!-- means of infection -->
                <LinearLayout
                    android:id="@+id/ll_cause_infection_virus_detail"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="10dp">
                        <ImageView
                            android:id="@+id/img_cause_infection_virus_detail"
                            android:scaleType="centerInside"
                            android:src="@drawable/infection"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll_cause_infection_items_virus_detail"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>