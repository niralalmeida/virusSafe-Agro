<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDarkBG"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"/>

    <!-- bottom bar -->
    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:background="@color/bar_bg_bottom_bar"
        app:itemIconTint="@color/color_selector_bottom_bar_items"
        app:itemTextColor="@color/color_selector_bottom_bar_items"
        app:itemIconSize="33dp"
        app:itemTextAppearanceActive="@style/navTextActive"
        app:itemTextAppearanceInactive="@style/navTextInactive"
        app:elevation="0dp"
        app:menu="@menu/nav_menu" />

<!--    app:itemBackground="@color/color_selector_item_bg_bottom_bar_items"-->

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:transitionName="@string/transition_name_fab_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_photo_analysis"
        app:borderWidth="5dp"
        android:backgroundTint="@color/colorPrimaryDark"
        app:backgroundTint="@color/bar_bg_bottom_bar"
        app:rippleColor="@color/ripple_fab"
        app:elevation="0dp"
        app:maxImageSize="30dp"
        app:fabCustomSize="80dp"
        app:pressedTranslationZ="10dp"/>

<!--    app:borderWidth="8dp"-->

</RelativeLayout>