    <TextView
        android:id="@+id/tv_heading_slide_boarding"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/cv_icon_slide_boarding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Viruses and Nutrient Deficiency" />

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_icon_slide_boarding"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/img_icon_slide_boarding"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/screen_1_easy_virus_detection" />

    </androidx.cardview.widget.CardView>

<!--    <View-->
<!--        android:id="@+id/v_line_slide_boarding"-->
