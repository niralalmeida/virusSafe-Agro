    <TextView
        android:id="@+id/tv_description_slide_boarding"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cv_icon_slide_boarding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:text="This this description " />


    <Button
        android:id="@+id/btn_launch_app_boarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:elevation="5dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/btn_empty_slide_boarding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/button_launch_app_boarding"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/colorWhite"
        android:background="@drawable/ripple_launch_app_boarding"/>

    <Button
        android:id="@+id/btn_empty_slide_boarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorWhite"
        android:visibility="invisible"
        android:background="@android:color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>
