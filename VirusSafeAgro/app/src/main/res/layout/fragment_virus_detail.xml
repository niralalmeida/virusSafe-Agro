<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_virus_detail"
    android:orientation="vertical"
    tools:context=".fragments.VirusDetailFragment">

    <LinearLayout
        android:id="@+id/ll_virus_detail"
        android:orientation="vertical"
        android:layout_above="@+id/ll_take_quiz_virus_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Part -->
        <RelativeLayout
            android:id="@+id/rl_top_part_virus_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Virus Image -->
            <LinearLayout
                android:id="@+id/ll_top_pic_virus_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_top_pic_virus_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/one" />

            </LinearLayout>

            <!-- Virus Full Name Title -->
            <LinearLayout
                android:id="@+id/ll_full_name_virus_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:background="#80000000"
                android:layout_alignTop="@+id/ll_top_pic_virus_detail"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_full_name_virus_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:text="TOMATO YELLOW LEAF CURL VIRUS"/>

                    <TextView
                        android:id="@+id/tv_abbreviation_virus_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:text=" (TYLC)"/>

                </LinearLayout>


            </LinearLayout>

            <!-- swipe up -->
            <RelativeLayout
                android:id="@+id/rl_swipe_up_virus_detail"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="#80000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_swipe_up_virus_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@id/img_swipe_up_virus_detail"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    android:text="Swipe Up"/>

                <ImageView
                    android:id="@+id/img_swipe_up_virus_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/swipe_up"/>

            </RelativeLayout>

        </RelativeLayout>

        <!-- Buttons for Virus Content -->
        <LinearLayout
            android:id="@+id/ll_button_list_virus_detail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_description_virus_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/selector_btn_bg_virus_details"
                android:textColor="@drawable/selector_btn_text_virus_details"
                android:textStyle="bold"
                android:text="Description" />

            <Button
                android:id="@+id/btn_symptom_virus_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:background="@drawable/selector_btn_bg_virus_details"
                android:textColor="@drawable/selector_btn_text_virus_details"
                android:textStyle="bold"
                android:text="Symptoms" />

            <Button
                android:id="@+id/btn_causes_virus_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:background="@drawable/selector_btn_bg_virus_details"
                android:textColor="@drawable/selector_btn_text_virus_details"
                android:textStyle="bold"
                android:text="Causes" />

            <Button
                android:id="@+id/btn_prevention_virus_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:background="@drawable/selector_btn_bg_virus_details"
                android:textColor="@drawable/selector_btn_text_virus_details"
                android:textStyle="bold"
                android:text="Prevention" />

        </LinearLayout>

        <!-- Middle Part -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_middle_content_virus_detail"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">


            <LinearLayout
                android:id="@+id/ll_middle_content_virus_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tile_virus_detail_contents"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_middle_content_virus_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSubTitle"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <!-- Bottom Part -->
    <LinearLayout
        android:id="@+id/ll_take_quiz_virus_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_take_quiz_virus_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_btn_quiz_virus_detail"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:text="@string/recycler_view_quiz_button" />

    </LinearLayout>

</RelativeLayout>
