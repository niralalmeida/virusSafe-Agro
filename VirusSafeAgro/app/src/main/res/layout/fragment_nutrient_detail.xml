<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDarkBG"
    android:orientation="vertical"
    tools:context=".fragments.NutrientDetailFragment">

    <RelativeLayout
        android:id="@+id/rl_nutrient_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Part -->
        <RelativeLayout
            android:id="@+id/rl_top_part_nutrient_detail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <!-- Virus Image -->
            <LinearLayout
                android:id="@+id/ll_top_pic_nutrient_detail"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_top_pic_nutrient_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="false"
                    android:src="@drawable/one" />

            </LinearLayout>

            <!-- Nutrient Name Title -->
            <LinearLayout
                android:id="@+id/ll_name_nutrient_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:background="#80000000"
                android:layout_alignTop="@+id/ll_top_pic_nutrient_detail"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name_nutrient_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:text="TOMATO YELLOW LEAF CURL VIRUS"/>

                </LinearLayout>


            </LinearLayout>

            <!-- Buttons for Nutrient Content -->
            <LinearLayout
                android:id="@+id/ll_button_list_nutrient_detail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/ll_top_pic_nutrient_detail"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_description_nutrient_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_bg_virus_details"
                    android:textColor="@drawable/selector_btn_text_virus_details"
                    android:textStyle="bold"
                    android:text="Description" />

                <Button
                    android:id="@+id/btn_symptom_nutrient_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_bg_virus_details"
                    android:textColor="@drawable/selector_btn_text_virus_details"
                    android:textStyle="bold"
                    android:text="Symptoms" />

                <Button
                    android:id="@+id/btn_causes_nutrient_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_bg_virus_details"
                    android:textColor="@drawable/selector_btn_text_virus_details"
                    android:textStyle="bold"
                    android:text="Causes" />

                <Button
                    android:id="@+id/btn_prevention_nutrient_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:background="@drawable/selector_btn_bg_virus_details"
                    android:textColor="@drawable/selector_btn_text_virus_details"
                    android:textStyle="bold"
                    android:text="Prevention" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Middle Part -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_description_nutrient_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_top_part_nutrient_detail"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">


            <LinearLayout
                android:id="@+id/ll_description_nutrient_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tile_virus_detail_contents"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_description_nutrient_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSubTitle"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_symptom_nutrient_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_top_part_nutrient_detail"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">


            <LinearLayout
                android:id="@+id/ll_symptoms_nutrient_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tile_virus_detail_contents"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_symptoms_nutrient_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSubTitle"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_causes_nutrient_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_top_part_nutrient_detail"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:id="@+id/ll_causes_nutrient_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tile_virus_detail_contents"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_causes_nutrient_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSubTitle"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_prevention_nutrient_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_top_part_nutrient_detail"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:id="@+id/ll_prevention_nutrient_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tile_virus_detail_contents"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_prevention_nutrient_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSubTitle"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</RelativeLayout>
