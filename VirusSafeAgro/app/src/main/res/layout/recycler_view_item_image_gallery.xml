<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_each_item_image_gallery"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- image card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_image_gallery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:transitionName="@string/image_view_transition_name"
        app:layout_constraintDimensionRatio="1:1"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/img_item_image_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_cart_image_gallery"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>