<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.VirusQuizQuestionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:background="@color/correctAnswer"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_virus_full_name_quiz_question"
                style="@android:style/TextAppearance.Large"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textColor="#FAFAFA"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="XXXX XXXX"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/quiz_bg">

        <LinearLayout
            android:id="@+id/ll_question_process_quiz_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

        </LinearLayout>

        <!-- back button -->
        <LinearLayout
            android:id="@+id/ll_slide_back_quiz_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_alignParentStart="true">

            <ImageButton
                android:id="@+id/btn_slide_back_quiz_question"
                android:layout_width="20dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"
                android:saveEnabled="false"
                android:background="@android:color/transparent"
                android:src="@drawable/btn_arrow_left_white_100dp"/>

        </LinearLayout>

        <com.example.virussafeagro.uitilities.NonSwipeableViewPager
            android:id="@+id/slide_virus_quiz_question"
            android:layout_below="@id/ll_question_process_quiz_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

        </com.example.virussafeagro.uitilities.NonSwipeableViewPager>

        <LinearLayout
            android:id="@+id/ll_process_bar_virus_quiz_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ProgressBar
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/correctAnswer"
                android:text="@string/process_bar_text_virus_quiz_question" />

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>
