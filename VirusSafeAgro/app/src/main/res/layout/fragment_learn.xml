            <!-- nutrient -->
            <RelativeLayout
                android:id="@+id/rl_nutrient_learn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_virus_learn"
                android:layout_marginTop="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="25dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@drawable/ripple_tile_rectangle">

                <TextView
                    android:id="@+id/tv_title_nutrient_learn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/text_title_nutrient_learn"/>

                <!-- icon + content -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title_nutrient_learn"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/iv_nutrient_learn"
                        android:layout_width="65dp"
                        android:layout_height="45dp"
                        android:layout_alignTop="@id/tv_content_nutrient_learn"
                        android:layout_alignBottom="@id/tv_content_nutrient_learn">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/nutrient"
                            android:tint="@color/iconNutrient" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_content_nutrient_learn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_nutrient_learn"
                        android:text="@string/text_content_nutrient_learn"
                        android:textColor="@color/colorPrimaryDescriptionContent"
                        android:textSize="13sp" />

                </RelativeLayout>

            </RelativeLayout>

            <!-- tomato growth tip -->
            <RelativeLayout
                android:id="@+id/rl_tomato_growth_tip_learn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_nutrient_learn"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="40dp"
                android:paddingTop="20dp"
                android:paddingBottom="25dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@drawable/ripple_tile_rectangle">

                <TextView
                    android:id="@+id/tv_title_tomato_growth_tip_learn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/text_title_tomato_growth_tip_learn"/>

                <!-- icon + content -->
                <RelativeLayout
                    android:layout_below="@+id/tv_title_tomato_growth_tip_learn"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/iv_tomato_growth_tip_learn"
                        android:layout_alignTop="@id/tv_content_tomato_growth_tip_learn"
                        android:layout_alignBottom="@id/tv_content_tomato_growth_tip_learn"
                        android:layout_width="65dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:tint="@color/iconTomatoTip"
                            android:src="@drawable/tomato_tip_simple2"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_content_tomato_growth_tip_learn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_tomato_growth_tip_learn"
                        android:textColor="@color/colorPrimaryDescriptionContent"
                        android:textSize="13sp"
                        android:text="@string/text_content_tomato_growth_tip_learn" />

                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- bottom shadow -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_swipe_up_bg_virus_detail" />

</RelativeLayout>