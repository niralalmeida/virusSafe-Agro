            <!-- virus -->
            <RelativeLayout
                android:id="@+id/rl_virus_learn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="25dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@drawable/ripple_tile_rectangle">

                <TextView
                    android:id="@+id/tv_title_virus_learn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/text_title_virus_learn"/>

                <!-- icon + content -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title_virus_learn"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/iv_virus_learn"
                        android:layout_width="65dp"
                        android:layout_height="45dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:tint="@color/iconVirus"
                            android:src="@drawable/virus"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_content_virus_learn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_virus_learn"
                        android:layout_alignTop="@id/tv_content_virus_learn"
                        android:layout_alignBottom="@id/tv_content_virus_learn"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorPrimaryDescriptionContent"
                        android:textSize="13sp"
                        android:text="@string/text_content_virus_learn" />

                </RelativeLayout>

            </RelativeLayout>

<!--            &lt;!&ndash; sub title : nutrient knowledge &ndash;&gt;-->
