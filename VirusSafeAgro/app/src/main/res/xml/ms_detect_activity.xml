<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition app:duration="300"
        app:constraintSetEnd="@id/end_show_detect_button"
        app:constraintSetStart="@id/start_show_detect_button">
    </Transition>


    <!-- show detect buttons start -->
    <ConstraintSet android:id="@+id/start_show_detect_button">
        <!-- container motion layout -->
        <Constraint
            android:id="@+id/ml_detect_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <PropertySet
                android:alpha="1" />
        </Constraint>
        <!-- close button -->
        <Constraint
            android:id="@+id/btn_close_detect_activity"
            android:layout_alignEnd="@id/nsv_all_view_detect_activity"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <PropertySet
                android:visibility="invisible" />
        </Constraint>
        <!-- title -->
        <Constraint
            android:id="@+id/tv_choose_image_title_detect_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <PropertySet
                android:visibility="invisible" />
        </Constraint>
        <!-- 2 buttons card -->
        <Constraint
            android:id="@+id/cv_2_buttons_detect"
            android:transitionName="@string/fab_transition_name"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_choose_image_title_detect_activity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </Constraint>
        <!-- upload image -->
        <Constraint
            android:id="@+id/img_upload_check"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/cv_2_buttons_detect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <PropertySet
                android:visibility="invisible" />
        </Constraint>
        <!-- upload button -->
        <Constraint
            android:id="@+id/btn_upload_image_detect_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/img_upload_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <PropertySet
                android:visibility="invisible" />
        </Constraint>
        <!-- swipe up lottie -->
        <Constraint
            android:id="@+id/lav_swipe_up_detect_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
