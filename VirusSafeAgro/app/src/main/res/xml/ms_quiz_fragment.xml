<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition app:duration="300"
        app:constraintSetEnd="@id/end_show_question_content"
        app:constraintSetStart="@id/start_show_question_content">
    </Transition>

    <!-- show question content start -->
    <ConstraintSet android:id="@+id/start_show_question_content">
        <!-- question bg -->
        <Constraint
            android:id="@+id/cl_question_quiz_question_fragment"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </Constraint>
        <!-- question image -->
        <Constraint
            android:id="@+id/cv_virus_quiz_question_fragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="-10dp"
            app:layout_constraintBottom_toTopOf="@id/cl_question_quiz_question_fragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </Constraint>
        <!-- question no -->
        <Constraint
            android:id="@+id/tv_no_quiz_question_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@id/cl_question_quiz_question_fragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <PropertySet
                android:visibility="visible"
                android:alpha="1"/>
        </Constraint>
        <!-- options grid layout -->
        <Constraint
            android:id="@+id/gl_options_quiz_question_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:elevation="9dp"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_question_for_layout_quiz_question_fragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </Constraint>
        <!-- result top sheet -->
        <Constraint
            android:id="@+id/dyrl_result_top_sheet_quiz_question_fragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:elevation="20dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <PropertySet
                android:visibility="invisible"
                android:alpha="0"/>
        </Constraint>
    </ConstraintSet>

