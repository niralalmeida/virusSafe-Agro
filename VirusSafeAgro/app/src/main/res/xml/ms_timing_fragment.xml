<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        app:duration="300"
        app:constraintSetEnd="@id/end_show_card"
        app:constraintSetStart="@id/start_show_card">
    </Transition>

    <!-- show card start -->
    <ConstraintSet android:id="@+id/start_show_card">
        <!-- card 1 -->
        <Constraint
            android:id="@+id/cv_eb_timing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rl_note_timing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </Constraint>
        <!-- card 2 -->
        <Constraint
            android:id="@+id/cv_tssm_timing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cv_eb_timing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </Constraint>
    </ConstraintSet>

    <!-- show card end -->
    <ConstraintSet android:id="@+id/end_show_card">
        <!-- card 1 -->
        <Constraint
            android:id="@+id/cv_eb_timing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rl_note_timing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </Constraint>
        <!-- card 2 -->
        <Constraint
            android:id="@+id/cv_tssm_timing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cv_eb_timing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </Constraint>
    </ConstraintSet>

</MotionScene>